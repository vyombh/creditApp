<!DOCTYPE html>
<html>
<head>
  <title>CreditApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if notice %>

<script type="text/javascript">
	noty({text: '<%= notice %>', type: 'success', timeout: 1000});
</script>
<% end%>

<% if  alert %>
<script type="text/javascript">
	noty({text: '<%=alert %>', type: 'error',timeout: 1000});
</script>

<% end%>

<%if current_user%>
<header>
	<div class="logo">
		<%= image_tag 'images.jpg' %>
	</div>
	<div>
		<nav>
			<ul>
				<li><%=current_user.email%></li>
				<li>  <%= link_to "Sign Out",destroy_user_session_path,method: :delete ,data: {confirm:"Are you sure?"}%></li>
			</ul>
		</nav>
	</div>

</header>
<%end%>

<%= yield %>

</body>
</html>
